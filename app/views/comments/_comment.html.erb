          <%= link_to " Delete", account_comment_path(@account, comment.id),
              method: :delete, data: { confirm: 'Are you sure?' },
              class:'text-dark'%>
      </div>
      </td>
      <% if user_signed_in? %>
    <% else %>
  <% end %>
