<% if user_signed_in? %>
<h1><center><%= @account.name%></center></h1>
<% else %>
  <h1>Please Login First</h1>
<% end %>
  <hr>

    <div class="row">
      <div class="col-md-8 mx-auto">
          <h6 class="border"style="height:150px; padding: 1%">
            <strong>
                  <%= @account.position%>
          </strong>
          </h6>
        <table class="table border">
        <tbody>
          <%= render @account.comments %>
        </tbody>
      </table>
      <%= render "comments/form" %>

      <% if user_signed_in? %>
      <%= link_to 'Back', accounts_path, class:'btn btn-outline-dark' %>
      <%= link_to 'Edit', edit_account_path(@account), class:'btn btn-outline-primary' %>
      <%= link_to 'Delete', @account, method: :delete, data: { confirm: 'Are you sure?'}, class:'btn btn-outline-danger' %>

      <% else %>
      <%= link_to 'Back', accounts_path, class:'btn btn-outline-dark' %>

      <% end %>
    </div>
  </div>

<br>
