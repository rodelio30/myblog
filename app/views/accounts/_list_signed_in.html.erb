<div class="row">
  <div class="col-md-8">
    <div class="row">
      <div class="col-2">
        <h1>Posts</h1>
      </div>
      <div class="col-8"></div>
      <div class="col-2">
        <%= link_to 'New Post', new_account_path, class:'btn btn-outline-success' %>
      </div>
    </div>
      <table class="table border">
        <tbody>
          <% @accounts.each do |account| %>
            <tr>
              <td colspan="2"><%= link_to account.name, account, class:'text-success' %><br>
                <% if account.position.length > 50 %>
                 <%= truncate(account.position, length: 50) %>
                 <%= link_to '...Read more', account, class:'text-warning' %>
                 <script>
                   $('.read-more-<%= account.id %>').on('click', function(e) {
                     e.preventDefault()
                     $(this).parent().html('<%= escape_javascript account.position %>')
                   })
                 </script>
                <% else %>
                 <%= account.position %>
                <% end %>
                </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
  </div>
<div class="col-md-4">
  <div class="card">
    <div class="list-group list-group-flush">
      <h4 class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to "All Tags", root_path, class:'text-dark'%>
        <span class="badge badge-pill"><%= link_to "New Tag", new_mytag_path, class:'badge badge-success'%></span>
        </h4>
    </div>
    <div class="card-body">
      <ul class="list-group">
        <% @mytags.each do |mytag| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= link_to mytag.category, accounts_path(:cate => mytag.id)%>
                <span class="badge badge-primary badge-pill"><%= mytag.accounts.count %></span>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
</div>
