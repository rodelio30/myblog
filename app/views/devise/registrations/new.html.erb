<div class="container">
  <div class="row">
    <div class="col-md-4 mx-auto">


  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.email_field :email, placeholder:'Email', autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>
<br>
    <div class="field">
      <%= f.password_field :password,placeholder:'Password', autocomplete: "new-password", class: 'form-control'%>
      <div style="float:right">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    </div>
    </div>
<br>

    <div class="field">
      <%= f.password_field :password_confirmation,placeholder:'Password Confirmation' ,autocomplete: "new-password", class:'form-control' %>
    </div>
<br>
    <div class="actions">
      <%= f.submit "Sign up", class:'form-control btn btn-outline-primary' %>
    </div>
  <% end %>
<br>
  <%= render "devise/shared/links" %>
  </div>
  </div>
</div>
